@inherits ComponentBase

<div class="patient-card">
    <div class="patient-info">
        <h4>Name: @PatientName</h4>
        <p>Age: @PatientAge</p>
    </div>
    <div class="contact-info">
        <h4>Contact Details:</h4>
        <p>Email: @PatientEmail</p>
        <p>Phone: @PatientPhone</p>
    </div>
</div>

@code {
    [Parameter] public string PatientName { get; set; }
    [Parameter] public int PatientAge { get; set; }
    [Parameter] public string PatientEmail { get; set; }
    [Parameter] public string PatientPhone { get; set; }
}

<style>
    .patient-card {
        border: 1px solid #ccc;
        padding: 20px;
        margin: 10px;
        background-color: #f9f9f9;
    }

    .patient-info {
        font-size: 18px;
    }

    .contact-info {
        font-size: 16px;
    }
</style>

